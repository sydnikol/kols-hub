{
  "name": "kol-unified-mega-app",
  "private": true,
  "version": "1.0.0",
  "description": "KOL - Your Self-Evolving Personal OS",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc && npx vite build",
    "build:netlify": "npm ci && npm run build",
    "preview": "vite preview",
    "start": "npm run dev",
    "deploy:netlify": "Scripts\\deploy-netlify.bat",
    "deploy:netlify:windows": "Scripts\\deploy-netlify.bat",
    "deploy:netlify:bash": "bash Scripts/deploy-netlify.sh",
    "desktop": "electron .",
    "build:desktop": "npm run build && electron-builder",
    "mobile:ios": "cap sync ios && cap open ios",
    "mobile:android": "cap sync android && cap open android",
    "setup:mobile": "cap add ios && cap add android",
    "build:mobile": "bash scripts/build-mobile.sh",
    "build:mobile:windows": "scripts\\build-mobile.bat",
    "build:downloads": "node Scripts/build-mobile-downloads.js",
    "build:android": "npm run build && npx cap sync android && npx cap open android",
    "build:ios": "npm run build && npx cap sync ios && npx cap open ios",
    "build:android-only": "npm run build && npx cap sync android && cd android && gradlew assembleRelease",
    "build:ios-only": "npm run build && npx cap sync ios && cd ios/App && xcodebuild -workspace App.xcworkspace -scheme App archive",
    "release:mobile": "npm run build:mobile && echo 'Upload APK to GitHub Releases'",
    "test": "echo \"No tests configured yet\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.8",
    "@capacitor/app": "^5.0.8",
    "@capacitor/core": "^5.7.8",
    "@capacitor/haptics": "^5.0.8",
    "@capacitor/ios": "^5.7.8",
    "@capacitor/keyboard": "^5.0.9",
    "@capacitor/status-bar": "^5.0.8",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.3",
    "@mui/material": "^5.15.3",
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "@tanstack/react-query": "^5.90.7",
    "axios": "^1.6.5",
    "chart.js": "^4.4.1",
    "date-fns": "^3.6.0",
    "dexie": "^3.2.7",
    "dexie-react-hooks": "^1.1.7",
    "framer-motion": "^10.18.0",
    "idb": "^8.0.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.312.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.21.2",
    "recharts": "^2.15.4",
    "three": "^0.160.1",
    "xlsx": "^0.18.5",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.8",
    "@rollup/rollup-win32-x64-msvc": "^4.53.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/three": "^0.160.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.1",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.4.21",
    "vite-plugin-pwa": "^0.17.5"
  },
  "main": "electron.cjs",
  "build": {
    "appId": "com.kol.megaapp",
    "productName": "KOL Personal OS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
